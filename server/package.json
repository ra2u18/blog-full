{
  "name": "server",
  "scripts": {
    "start:prod": "rimraf build && tsc && node build/src/index.js",
    "start:dev": "nodemon --ignore tests/ --watch src -e ts --exec ts-node src/index.ts",
    "start:development": "tsc-watch --noClear --onSuccess 'node build/src/index.js'",
    "build": "rimraf build && tsc",
    "test": "jest --watch",
    "test:once": "jest",
    "test:coverage": "jest --detectOpenHandles --forceExit --coverage && cat ./coverage/lcov.info",
    "lint": "eslint \"src/**/*.{ts,js}\"",
    "format:write": "prettier --write \"src/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\""
  },
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "dotenv": "^16.0.3",
    "koa": "^2.14.1",
    "koa-bodyparser": "^4.3.0",
    "winston": "^3.8.2",
    "zod": "^3.20.2"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "@types/koa": "^2.13.5",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa__cors": "^3.3.0",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint": "^8.32.0",
    "jest": "^29.4.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  }
}
